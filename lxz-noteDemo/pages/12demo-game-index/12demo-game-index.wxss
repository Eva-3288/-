
/* 轮播图 */
.ads image{
  width:100%;
  height:100%;
}
/* 导航菜单 */
.nav-outer{
padding: 10rpx 40rpx;
display: flex;
justify-content:space-between;
flex-wrap:wrap;
}
.nav-inner{
  text-align: center;
  /* border: 1px solid red; */
  margin-top:40rpx;
  

}
.nav-inner image{
width:140rpx;
height:140rpx;
}
.nav-inner view{
  font-size:28rpx;
  color:#333;
  margin-top:10rpx;
}
/* --------------------------- */

.scroll-nav .nav-inner{
  margin-right:30rpx;
}
.scroll-nav scroll-view{
background: #f0f0f0;

}

/* ---------------列表---------------- */
.goods-lists{
  padding:40rpx;
}
.goods-item{
  display: flex;
  color:#333;
  margin-bottom:30rpx;
}
.goods-item image{
width: 300rpx;
height:180rpx;
margin-right:20rpx;
}
.item-title{
  font-size: 28rpx;
font-weight: 800;

}
.price{
font-size: 36rpx;
font-weight: 800;
color:#e1251b;
margin:8rpx 0;
}
.saleNum{
font-size: 28rpx;
color:#666;
}
.item-right {
  position: relative;
}
.item-right button{
  position: absolute;
  bottom:0;
  right:0;
  background: #e1251b;
  color:#fff;
  font-size:28rpx!important;
  font-family: '微软雅黑'；
}
.ad{
width: 100%;
height:200rpx;
}